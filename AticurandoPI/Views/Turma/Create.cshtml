@model AticurandoPI.Models.Turma
@{
    ViewData["Title"] = "Criar Turma";
}
<section id="form-container-section" class="atc-container">
    <div class="atc-form-container">


        <form asp-action="Create" method="post" class="atc-card atc-form">
    @Html.AntiForgeryToken()
    <div asp-validation-summary="All" class="text-danger"></div>
            <h2>Cadastrar Turma</h2>
            <div class="atc-form-controls-container">
                
    <div>
        <input asp-for="Capacidade" class="atc-form-control" type="number" placeholder="Capacidade" required />
    </div>
    <div>
        <select asp-for="Turno" class="atc-form-control" required>
            <option value="">Selecione o turno</option>
            <option value="Manhã">Manhã</option>
            <option value="Tarde">Tarde</option>
            <option value="Noite">Noite</option>
        </select>
    </div>
    <div>
        <input asp-for="DataInicio" class="atc-form-control" type="datetime-local" required />
    </div>
    <div>
        <input asp-for="DataFim" class="atc-form-control" type="datetime-local" required />
    </div>
    <div>
        <select asp-for="CursoId" asp-items="ViewBag.CursoId" class="atc-form-control" required></select>
    </div>
                <div class="atc-form-buttons atc-mt20">
                <button type="submit" class="atc-btn atc-btn-blue">Salvar</button>
                <a asp-action="Index" class="atc-btn atc-btn-white">Cancelar</a>
            </div>
              </div>
</form>
</div>
</section>

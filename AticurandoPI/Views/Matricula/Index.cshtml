@model IEnumerable<AticurandoPI.Models.Matricula>

@{
    ViewData["Title"] = "Matrículas";
}

<h1>Matrículas</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Nova Matrícula</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Aluno</th>
            <th>Turma</th>
            <th>Curso</th>
            <th>Status</th>
            <th>Data</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var m in Model)
{
        <tr>
            <td>@m.Aluno?.Nome</td>
            <td>@m.Turma?.Turno</td>
            <td>@m.Turma?.Curso?.Nome</td>
            <td>@m.Status</td>
            <td>@m.DataHora.ToString("dd/MM/yyyy HH:mm")</td>
            <td>
                <a asp-action="Aprove" asp-route-id="@m.Id">Aprovar</a> |
                <a asp-action="Delete" asp-route-id="@m.Id">Recusar</a>
            </td>
        </tr>
}
    </tbody>
</table>

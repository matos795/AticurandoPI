@model AticurandoPI.Models.Aluno
@{
    ViewData["Title"] = "Editar Aluno";
}

<section id="form-container-section" class="atc-container">

    <div class="atc-form-container">

<form asp-action="Edit" method="post" class="atc-card atc-form">

    <h2>Editar Aluno</h2>

    <div class="atc-form-controls-container">

            <input type="hidden" asp-for="Id" />

    <div>
        <label asp-for="Nome"></label>
        <input asp-for="Nome" class="atc-form-control" required />
    </div>
    <div>
        <label asp-for="Cpf"></label>
        <input asp-for="Cpf" class="atc-form-control" required />
    </div>
    <div>
        <label asp-for="Email"></label>
        <input asp-for="Email" class="atc-form-control" type="email" required />
    </div>
    <div>
        <label asp-for="Telefone"></label>
        <input asp-for="Telefone" class="atc-form-control" type="tel" required />
    </div>
    <div>
        <label asp-for="DataNascimento"></label>
        <input asp-for="DataNascimento" class="atc-form-control" type="date" required />
    </div>
    <div>
        <label asp-for="Senha"></label>
        <input asp-for="Senha" class="atc-form-control" type="password" required />
    </div>

    <div class="atc-form-buttons">
    <button type="submit" class="btn btn-primary">Salvar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </div>
    </div>
</form>
</div>
</section>